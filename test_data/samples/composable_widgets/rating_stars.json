{
  "templates": {
    "star": {
      "type": "image",
      "width": {
        "type": "fixed",
        "value": 32
      },
      "height": {
        "type": "fixed",
        "value": 32
      },
      "margins": {
        "right": 4
      },
      "image_url": "https://img.icons8.com/material-outlined/48/star--v2.png",
      "$tint_color": "star_color",
      "$actions": "star_actions"
    },
    "review_summary": {
      "type": "container",
      "orientation": "horizontal",
      "content_alignment_vertical": "center",
      "items": [
        {
          "type": "text",
          "$text": "summary_label",
          "font_size": 13,
          "text_color": "#757575",
          "width": {
            "type": "fixed",
            "value": 80
          }
        },
        {
          "type": "container",
          "width": {
            "type": "match_parent"
          },
          "weight": 1,
          "height": {
            "type": "fixed",
            "value": 8
          },
          "background": [
            {
              "type": "solid",
              "color": "#E0E0E0"
            }
          ],
          "border": {
            "corner_radius": 4
          },
          "items": [
            {
              "type": "container",
              "$width": "bar_width",
              "height": {
                "type": "fixed",
                "value": 8
              },
              "background": [
                {
                  "type": "solid",
                  "color": "#FFC107"
                }
              ],
              "border": {
                "corner_radius": 4
              }
            }
          ]
        },
        {
          "type": "text",
          "$text": "count_text",
          "font_size": 13,
          "text_color": "#757575",
          "text_alignment_horizontal": "right",
          "width": {
            "type": "fixed",
            "value": 36
          }
        }
      ]
    }
  },
  "card": {
    "log_id": "rating_stars_card",
    "variables": [
      {
        "name": "user_rating",
        "type": "integer",
        "value": 0
      },
      {
        "name": "avg_rating",
        "type": "number",
        "value": 4.3
      },
      {
        "name": "total_reviews",
        "type": "integer",
        "value": 1284
      }
    ],
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "vertical",
          "paddings": {
            "left": 16,
            "top": 16,
            "right": 16,
            "bottom": 16
          },
          "items": [
            {
              "type": "text",
              "text": "Ratings & Reviews",
              "font_size": 20,
              "font_weight": "bold",
              "text_color": "#1A1A1A",
              "paddings": {
                "bottom": 16
              }
            },
            {
              "type": "container",
              "orientation": "horizontal",
              "content_alignment_vertical": "center",
              "paddings": {
                "bottom": 16
              },
              "items": [
                {
                  "type": "container",
                  "orientation": "vertical",
                  "content_alignment_horizontal": "center",
                  "width": {
                    "type": "fixed",
                    "value": 80
                  },
                  "items": [
                    {
                      "type": "text",
                      "text": "@{avg_rating}",
                      "font_size": 36,
                      "font_weight": "bold",
                      "text_color": "#212121"
                    },
                    {
                      "type": "text",
                      "text": "@{total_reviews} reviews",
                      "font_size": 12,
                      "text_color": "#757575"
                    }
                  ]
                },
                {
                  "type": "container",
                  "orientation": "vertical",
                  "width": {
                    "type": "match_parent"
                  },
                  "weight": 1,
                  "paddings": {
                    "left": 16
                  },
                  "items": [
                    {
                      "type": "review_summary",
                      "summary_label": "5 stars",
                      "bar_width": {
                        "type": "fixed",
                        "value": 120
                      },
                      "count_text": "845"
                    },
                    {
                      "type": "review_summary",
                      "summary_label": "4 stars",
                      "bar_width": {
                        "type": "fixed",
                        "value": 60
                      },
                      "count_text": "256"
                    },
                    {
                      "type": "review_summary",
                      "summary_label": "3 stars",
                      "bar_width": {
                        "type": "fixed",
                        "value": 30
                      },
                      "count_text": "98"
                    },
                    {
                      "type": "review_summary",
                      "summary_label": "2 stars",
                      "bar_width": {
                        "type": "fixed",
                        "value": 15
                      },
                      "count_text": "52"
                    },
                    {
                      "type": "review_summary",
                      "summary_label": "1 star",
                      "bar_width": {
                        "type": "fixed",
                        "value": 8
                      },
                      "count_text": "33"
                    }
                  ]
                }
              ]
            },
            {
              "type": "separator",
              "delimiter_style": {
                "color": "#E0E0E0",
                "orientation": "horizontal"
              },
              "margins": {
                "bottom": 16
              }
            },
            {
              "type": "text",
              "text": "Your Rating",
              "font_size": 16,
              "font_weight": "medium",
              "text_color": "#212121",
              "paddings": {
                "bottom": 8
              }
            },
            {
              "type": "container",
              "orientation": "horizontal",
              "content_alignment_vertical": "center",
              "items": [
                {
                  "type": "star",
                  "star_color": "@{if(user_rating >= 1, '#FFC107', '#E0E0E0')}",
                  "star_actions": [
                    {
                      "log_id": "rate_1",
                      "url": "div-action://set_variable?name=user_rating&value=1"
                    }
                  ]
                },
                {
                  "type": "star",
                  "star_color": "@{if(user_rating >= 2, '#FFC107', '#E0E0E0')}",
                  "star_actions": [
                    {
                      "log_id": "rate_2",
                      "url": "div-action://set_variable?name=user_rating&value=2"
                    }
                  ]
                },
                {
                  "type": "star",
                  "star_color": "@{if(user_rating >= 3, '#FFC107', '#E0E0E0')}",
                  "star_actions": [
                    {
                      "log_id": "rate_3",
                      "url": "div-action://set_variable?name=user_rating&value=3"
                    }
                  ]
                },
                {
                  "type": "star",
                  "star_color": "@{if(user_rating >= 4, '#FFC107', '#E0E0E0')}",
                  "star_actions": [
                    {
                      "log_id": "rate_4",
                      "url": "div-action://set_variable?name=user_rating&value=4"
                    }
                  ]
                },
                {
                  "type": "star",
                  "star_color": "@{if(user_rating >= 5, '#FFC107', '#E0E0E0')}",
                  "star_actions": [
                    {
                      "log_id": "rate_5",
                      "url": "div-action://set_variable?name=user_rating&value=5"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "@{if(user_rating > 0, user_rating + '/5', 'Tap to rate')}",
                  "font_size": 14,
                  "text_color": "#757575",
                  "paddings": {
                    "left": 12
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
